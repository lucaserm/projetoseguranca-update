<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="first_part">
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Estudantes</h1>
        <p class="text-center lead">Todos os alunos registrados</p>
        <% if (estudantes.length > 0){ %>
        <div class="responsive-table">
          <table class="table my-3" color>
            <tr align="center">
              <td>Nome</td><td>CPF</td><td>RA</td><td>Foto</td><td>Editar</td><td>Horários</td>
            </tr>
            <% estudantes.forEach(estudante => { %>
            <tr class="vertival-align-center" align="center">
              <td><%= estudante.nome_estudante%></td>
              <td><%= estudante.cpf%></td>
              <td><%= estudante.ra%></td>
              <td><img src="<%= estudante.foto%>" height="60"></td>
              <td>
                <form action="/administracao/editar" method="post">
                  <input type="text" name="ra" value="<%= estudante.ra%>" hidden>
                  <input type="text" name="codigo_servidor" value="<%= codigo_servidor%>" hidden>
                  <input type="text" name="senha" value="<%= senha%>" hidden>
                  <button class="btn button btn-info">Editar</button>
                </form>
              </td>
              <td>
                <form action="/administracao/horarios" method="post">
                  <input type="text" name="ra" value="<%= estudante.ra%>" hidden>
                  <input type="text" name="codigo_servidor" value="<%= codigo_servidor%>" hidden>
                  <input type="text" name="senha" value="<%= senha%>" hidden>
                  <button class="btn button btn-success">Horários</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </table>
        </div>
        <hr style="background-color: #FFF; margin: 1rem;">
        <form action="/administracao/paginainicial" method="POST">
          <input type="text" name="codigo_servidor" value="<%= codigo_servidor%>" hidden>
          <input type="text" name="senha" value="<%= senha%>" hidden>
          <button class="btn button btn-dark">Voltar</button>
        </form>
        <% } else { %>
          <hr style="background-color: #FFF; margin: 1rem;">
          <p class="text-center lead">Não existem estudantes registrados.</p>
          <hr style="background-color: #FFF; margin: 1rem;">
          <form action="/cadastro" method="POST">
            <input type="text" name="codigo_servidor" value="<%= codigo_servidor%>" hidden>
            <input type="text" name="senha" value="<%= senha%>" hidden>
            <button class="btn button btn-info small">Cadastros</button>
          </form>
          <hr style="background-color: #FFF; margin: 1rem;">
          <form action="/">
            <button class="btn button btn-dark">Voltar</button>
          </form>
        <% } %>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>